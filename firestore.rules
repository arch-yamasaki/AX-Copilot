rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    // 登録制（メール個別許可）: allowlist/{email} が存在すること
    function emailAllowed() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/allowlist/$(request.auth.token.email));
    }

    // 本人のみ allowlist/{email} を参照できるようにする（暫定案B）
    match /allowlist/{email} {
      allow read: if request.auth != null && request.auth.token.email == email;
      allow write: if false; // 管理者操作のみ（Functions等）
    }

    // アプリが使う領域：users/{uid}/** のみ
    match /users/{uid}/{document=**} {
      allow read, write: if isOwner(uid) && emailAllowed();
    }
  }
}